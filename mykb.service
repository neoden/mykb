[Unit]
Description=MyKB - Personal knowledge base with MCP
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=mykb
Group=mykb

ExecStart=/usr/local/bin/mykb serve http

# Security hardening
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=yes
PrivateTmp=yes
ReadWritePaths=/var/lib/mykb

# Allow binding to 443
AmbientCapabilities=CAP_NET_BIND_SERVICE

# Restart policy
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
